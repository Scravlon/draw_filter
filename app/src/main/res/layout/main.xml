<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

  <com.scravlon.mobilevision1.camera.CameraSourcePreview
      android:id="@+id/preview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="3">

    <com.scravlon.mobilevision1.camera.GraphicOverlay
        android:id="@+id/faceOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  </com.scravlon.mobilevision1.camera.CameraSourcePreview>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1">

    <LinearLayout
        android:id="@+id/ll_facefeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/imageView123"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/index" />

          <ImageButton
              android:id="@+id/but_addHead"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              android:background="@drawable/imgagebutton"
              app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>
      </HorizontalScrollView>

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <ImageButton
              android:id="@+id/imageButton5"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              android:background="@drawable/imgagebutton"
              app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

          <ImageView
              android:id="@+id/imageView6"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/index" />

          <ImageView
              android:id="@+id/imageView3"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/common_plus_signin_btn_icon_dark_pressed" />

          <ImageView
              android:id="@+id/imageView4"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/index" />

          <ImageView
              android:id="@+id/imageView2"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/common_plus_signin_btn_icon_dark_pressed" />

          <ImageView
              android:id="@+id/imageView"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              app:srcCompat="@drawable/index" />

          <ImageButton
              android:id="@+id/but_addMust"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              android:background="@drawable/imgagebutton"
              app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>
      </HorizontalScrollView>

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <ImageButton
              android:id="@+id/but_addNose"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="1"
              android:background="@drawable/imgagebutton"
              app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>
      </HorizontalScrollView>
    </LinearLayout>
  </ScrollView>

</LinearLayout>
